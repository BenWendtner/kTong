<h1><%= product.name %></h1>

<%= link_to(image_tag(product.pictures.first.image.url(:medium)), pictures_get_pictures_original_path(:picture_id => product.pictures.first.id), :method => 'post', :remote => true) %>

<%= product.description%>

<% product.pictures.each_with_index do |picture, i| %>
	<% next if i == 0 %>
	<%= link_to(image_tag(picture.image.url(:thumb)), pictures_get_pictures_original_path(:picture_id => picture.id), :method => 'post', :remote => true) %>
<% end %>

<p>Farbe: <%= product.color %></p>