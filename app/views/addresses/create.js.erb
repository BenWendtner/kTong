$('#addresses-list').html('<%= escape_javascript(render :partial => 'addresses/index', :locals => {:addresses => @addresses}) %>');

$('.address-list-item').removeClass('selected');
$('#address-<%= @address.id %>').addClass('selected');
$('#link-to-checkout-payment').show();

$('.select-address').click(function() {
	$('.address-list-item').removeClass('selected');
	$(this).parents('.address-list-item').addClass('selected');
	$('#link-to-checkout-payment').show();
});